———2A. Stop and Wait————
#include <stdio.h> 
#include <stdlib.h> 
#include <unistd.h> 
// for sleep() 
int main() { 
	int n, x2, x; 
	printf("Enter number of frames to send: "); 
	scanf("%d", &n); 
	int i = 1; 
	while (n > 0) { 
	printf("\nSending frame - %d\n", i); 
	x = rand() % 10; 
	if (x % 10 == 0) { 
	for (x2 = 1; x2 < 2; x2++) { 
	printf("Timeout! Waiting for %d second(s)...\n", x2); 
	sleep(x2); 
	} 
	printf("Resending frame - %d\n", i); 
	}
	printf("Acknowledgement received for frame - %d\n", i); 
	n--; 
	i++; 
	} 
	printf("\nEnd of Stop and Wait Protocol Simulation\n"); 
	return 0; 
}
